<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.passwordmanager">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.USE_FINGERPRINT"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/iconf"
        android:label="Open Sesame"
        android:roundIcon="@drawable/icon_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="ExtraText">
        <activity android:name=".ProfileDetail"></activity>
        <activity
            android:name=".Splash_Screen"
            android:screenOrientation="portrait"
            android:theme="@style/noactionbarthemesplash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LoginActivity"
            android:label="Log In"
            android:screenOrientation="portrait"
            android:theme="@style/noactionbartheme" />
        <activity
            android:name=".RegisterActivity"
            android:label="Register"
            android:screenOrientation="portrait"
            android:theme="@style/noactionbartheme" />
        <activity
            android:name=".MainActivity"
            android:label="Open Sesame"
            android:windowSoftInputMode="stateHidden|adjustPan" />
        <activity
            android:name=".Show_Detail"
            android:label="View Details" />
        <activity
            android:name=".Add_Detail"
            android:label="Add Details"
            android:windowSoftInputMode="adjustPan" />
    </application>

</manifest>