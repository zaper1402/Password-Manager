<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true">


    <EditText
        android:id="@+id/heading"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="1dp"
        android:background="@color/blackshade"
        android:drawableLeft="@drawable/search"
        android:drawablePadding="10dp"
        android:gravity="center_vertical"
        android:imeOptions="actionDone"
        android:inputType="text"
        android:paddingLeft="5dp"
        android:textColor="#880e4f"
        android:textSize="18sp" />

    <ListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/heading"
        android:divider="@null"
        android:dividerHeight="0dp"
        android:focusable="true"></ListView>

    <!--<Button-->
        <!--android:id="@+id/addButton"-->
        <!--android:layout_width="80dp"-->
        <!--android:layout_height="80dp"-->
        <!--android:layout_alignParentBottom="true"-->
        <!--android:layout_centerHorizontal="true"-->
        <!--android:layout_marginBottom="30sp"-->
        <!--android:background="@drawable/round_button3"-->
        <!--android:gravity="center"-->
        <!--android:textSize="60sp" />-->

    <LinearLayout
        android:id="@+id/l2"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

    </LinearLayout>

    <LinearLayout
        android:id="@+id/l1"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_above="@id/l2"
        android:orientation="horizontal"></LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/addButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="false"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="40sp"
        android:layout_marginBottom="40sp"
        android:background="#891050"
        android:clickable="true"
        android:foreground="@drawable/round_button3"
        app:backgroundTint="#00520B0B"
        app:elevation="@dimen/cardview_default_elevation" />

</RelativeLayout>